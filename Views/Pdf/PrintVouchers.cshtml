<script type="text/javascript" src="CountryCodes.js"></script>
<script>
  
    function backloader(e) {
        
        document.getElementById('back').style.display = 'none';
        document.getElementById('backload').style.display = 'block';
         setTimeout(() => {
            document.getElementById('back').style.display = 'block';
            document.getElementById('backload').style.display = 'none';
        },5000)
    } 
    function blackloader(e) {
        
        document.getElementById('black').style.display = 'none';
        document.getElementById('blackload').style.display = 'block';
        setTimeout(() => {
            document.getElementById('black').style.display = 'block';
            document.getElementById('blackload').style.display = 'none';
        }, 5000)
    } 
    function whiteloader(e) {
        
        document.getElementById('white').style.display = 'none';
        document.getElementById('whiteload').style.display = 'block';
        setTimeout(() => {
        document.getElementById('white').style.display = 'block';
        document.getElementById('whiteload').style.display = 'none';
        }, 5000)
    }
    function checkcolor(e) {
        if(e.value==1){
            document.getElementById('newvoucherfrontblack').style.display = 'block';
            document.getElementById('newvoucherfrontwhite').style.display = 'none';
        }
        
        else{
        document.getElementById('newvoucherfrontblack').style.display = 'none'; 
        document.getElementById('newvoucherfrontwhite').style.display = 'block';
        }

    }


  
</script>



      