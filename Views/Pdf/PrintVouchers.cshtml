    <div>
        <div id="newvoucherback" style="display:block; margin-top:20px">
            <div style="display:flex; flex-direction:column; margin-top:10px; margin:0 auto; width:15%">
                <form asp-action="ExportToPdf" method="post" id="backform" enctype="multipart/form-data">
                    <input id="file" style="margin-top:10px" type="file" name="file" class="custom-file-input" />
                    <button style="margin-top:10px; width:190px" onclick="backloader()" id="back">@SharedLocalizer["BackSide"]</button>
                </form>
                <button style="margin-top:10px; width:190px; display:none" id="backload">...</button>

            </div>
        </div>
    </div>
    <div>
        <div id="newvoucherfrontblack" style="display:flex; flex-direction:column; margin-top:10px; margin:0 auto; width:15%; margin-top:20px">
            <form asp-action="ExportToPdfBackSide" id="frontformblack" method="post" enctype="multipart/form-data">
                <input id="file" style="margin-top:10px" type="file" name="file" class="custom-file-input" />
                <button style="margin-top:10px; width:190px" onclick="blackloader()" id="black" type="submit">@SharedLocalizer["FrontSide"]</button>
                <input hidden name="color" value="1" />
            </form>
            <button style="margin-top:10px; width:190px; display:none" id="blackload">...</button>

        </div>
    </div>
    <div>
        <div id="newvoucherfrontwhite" style="display:flex; flex-direction:column; margin-top:10px; margin:0 auto; width:15%; margin-top:20px; display:none">
            <form asp-action="ExportToPdfBackSide" id="frontformwhite" method="post" enctype="multipart/form-data">
                <input id="file" style="margin-top:10px" type="file" name="file" class="custom-file-input" />
                <button style="margin-top:10px; width:190px" onclick="whiteloader()" id="white" type="submit">@SharedLocalizer["FrontSide"]</button>
                <input hidden name="color" value="2" />
            </form>
            <button style="margin-top:10px; width:190px; display:none" id="whiteload">...</button>

        </div>
    </div>
</div>

 
 

<link href="~/lib/Swal/dist/sweetalert2.css" rel="stylesheet" />
<script src="~/lib/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.js"></script>
