@using Microsoft.AspNetCore.Mvc.Localization
@inject IJsonHelper Json;
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = "PrintVouchers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PdfData

